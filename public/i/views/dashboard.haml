          %form{:method => 'POST', :action => '/dodaj_znajomego'}
            %input{:size => 23, :type => 'text', :name => 'nick', :id => 'nick'}
            %input{:type => 'submit', :value => ''}
            %a{:href=>'javascript:anuluj_znajomego()'}
