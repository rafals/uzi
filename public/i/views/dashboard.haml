    #main
      .zawartosc
        #dodaj_zaqpek
          Dodaj zaqpek
        #dodawarka_zaqpka{:style => 'display: none'}
          %form{:action => '/dodaj_zaqpek', :method => 'POST'}
            .koszt_moj
              %input{:type => 'text', :name => 'koszt', :id => 'koszt', :size => 5, :value => 'za'}
              zł
            .nazwa
              %input{:type => 'text', :name => 'nazwa', :id => 'nazwa', :size => 18, :value => 'nazwa'}
            .dla
              %input{:type => 'text', :name => 'dla', :id => 'dla', :size => 25}
            %input{:type => 'submit', :value => ''}
            %a{:href=>'javascript:anuluj_zaqpek()'}
              #delete_icon
