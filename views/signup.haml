!!!
%html{ :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "Content-Type" }
    %title
      Zaqpki
    %script{ :src => "js/mootools/core.js", :type => "text/javascript" }
    %script{ :src => "js/mootools/more.js", :type => "text/javascript" }
    %script{ :src => "js/main.js?" + rand(10000000).to_s, :type => "text/javascript" }
  %body
    #signup{:class => 'display: none'}
      %label{:for => 'signupLogin'} Login
      %input#signupLogin.required{:type => 'text', :name => 'login', :size => 40, :class => "validate['required','alphanum']"}
      %label{:for => 'signupEmail'} Email
      %input#signupEmail.required{:type => 'text', :name => 'email', :size => 40, :class => "validate['required','email']"}
      %label{:for => 'signupFirstname'} Imię
      %input#signupFirstname{:type => 'text', :name => 'firstname', :size => 40, :class => "validate['alpha']"}
      %label{:for => 'signupSurename'} Nazwisko
      %input#signupSurename{:type => 'text', :name => 'surename', :size => 40, :class => "validate['alpha']"}
      %label{:for => 'signupPassword'} Hasło
      %input#signupPassword.required{:type => 'password', :name => 'password', :size => 40, :class => "validate['required']"}
      %label{:for => 'signupPasswordConfirmation'} Powtórz hasło
      %input#signupPasswordConfirmation.required{:type => 'password', :size => 40, :name => 'passwordConfirmation', :class => "validate['confirm[password]']"}
      %input#signupSubmit{:type => 'submit', :value => 'Zarejestruj'}
