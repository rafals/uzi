!!!
%html{ :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "Content-Type" }
    %title
      Zaqpki
    %link{ :href => "css/reset.css", :rel => "stylesheet", :media => "screen", :type => "text/css" }
    %link{ :href => "css/main.css?" + rand(10000000).to_s, :rel => "stylesheet", :media => "screen", :type => "text/css" }
    %link{ :href => "css/TextboxList.css", :rel => "stylesheet", :media => "screen", :type => "text/css" }
    %link{ :href => "css/TextboxList.Autocomplete.css", :rel => "stylesheet", :media => "screen", :type => "text/css" }
    %script{ :src => "js/mootools/core.js", :type => "text/javascript" }
    %script{ :src => "js/mootools/more.js", :type => "text/javascript" }
    %script{ :src => "js/formcheck.js", :type => "text/javascript" }
    %script{ :src => "js/lang/pl.js", :type => "text/javascript" }
    %script{ :src => "js/TextboxList.js", :type => "text/javascript" }
    %script{ :src => "js/GrowingInput.js", :type => "text/javascript" }
    %script{ :src => "js/TextboxList.Autocomplete.js", :type => "text/javascript" }
    %script{ :src => "js/main.js?" + rand(10000000).to_s, :type => "text/javascript" }
  %body
    %form#loginForm{:action => '/login.json', :method => 'POST'}
      %ul.menu
        %li.active
          Logowanie
        %li#showSignup
          Rejestracja
      %label{:for => 'loginLogin'} Login lub Email
      %input#loginLogin.required{:type => 'text', :name => 'login', :size => 40, :class => "validate['required','%loginCheck']"}
      %label{:for => 'loginPassword'} Hasło
      %input#loginPassword.required{:type => 'password', :name => 'password', :size => 40, :class => "validate['required']"}
      %input#loginSubmit.button{:type => 'submit', :value => 'Zaloguj'}
      .required-info
        Pola wymagane
    %form#signupForm{:action => '/signup.json', :method => 'POST', :style => 'display: none'}
      %ul.menu
        %li#showLogin
          Logowanie
        %li.active
          Rejestracja
      %label{:for => 'signupLogin'} Login
      %input#signupLogin.required{:type => 'text', :name => 'login', :size => 40, :class => "validate['required','alphanum']"}
      %label{:for => 'signupEmail'} Email
      %input#signupEmail.required{:type => 'text', :name => 'email', :size => 40, :class => "validate['required','email']"}
      %label{:for => 'signupFirstname'} Imię
      %input#signupFirstname{:type => 'text', :name => 'firstname', :size => 40, :class => "validate['alpha']"}
      %label{:for => 'signupSurename'} Nazwisko
      %input#signupSurename{:type => 'text', :name => 'surename', :size => 40, :class => "validate['alpha']"}
      %label{:for => 'signupPassword'} Hasło
      %input#signupPassword.required{:type => 'password', :name => 'password', :size => 40, :class => "validate['required']"}
      %label{:for => 'signupPasswordConfirmation'} Powtórz hasło
      %input#signupPasswordConfirmation.required{:type => 'password', :size => 40, :name => 'passwordConfirmation', :class => "validate['confirm[password]']"}
      %input#signupSubmit{:type => 'submit', :value => 'Zarejestruj'}
      .required-info
        Pola wymagane
    #stats{:style => 'display: none'}
      %ul.menu
        %li.active
          Statsy
        %li#showAddForm
          Nowy zaqpek
      #friendsList
    %form#addForm{:style => 'display: none', :action => '/add.json', :method => 'POST'}
      %ul.menu
        %li#showStats
          Statsy
        %li.active
          Nowy zaqpek
      %label{:for => 'addCost'} Za
      %input#addCost{:type => 'text', :name => 'cost', :size => 40, :class => "validate['required','number']"}
      %label{:for => 'addFor'} Dla
      %input#addFor{:type => 'text', :name => 'for', :size => 40, :class => "validate['required']"}
      %label{:for => 'addName'} Co
      %input#addName{:type => 'text', :name => 'name', :size => 40, :class => "validate['required']"}
      %input#addSubmit{:type => 'submit', :value => 'Dodaj'}
      